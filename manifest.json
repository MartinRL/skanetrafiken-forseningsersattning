{
  "manifest_version": 3,
  "name": "Skånetrafiken Förseningsersättning",
  "version": "1.0.1",
  "description": "Automatisk detektion av inställda resor och förseningsersättning för Skånetrafiken",
  "permissions": [],
  "host_permissions": [
    "https://www.skanetrafiken.se/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.skanetrafiken.se/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
